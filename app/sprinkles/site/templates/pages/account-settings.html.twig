{% extends "@account/pages/account-settings.html.twig" %}

{% block stylesheets_page_group %}
    {{ assets.css('css/site') | raw }}
{% endblock %}

{% block body_matter %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                {% block settings_stats_box %}
                    <div class="box box-primary">
                        {% include "components/settings/settings-stats.html.twig" %}
                    </div>
                {% endblock %}
            </div>
            <div class="col-lg-12">
                {% block settings_profile_box %}
                    <div class="box box-primary">
                        {% include "components/forms/settings-profile.html.twig" %}
                    </div>
                {% endblock %}
            </div>
            <div class="col-lg-12">
                {% block settings_account_box %}
                    <div class="box box-primary">
                        {% include "components/forms/settings-account.html.twig" %}
                    </div>
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}


{% block scripts_page_group %}
    {{ assets.js('js/account_settings') | raw }}
{% endblock %}
