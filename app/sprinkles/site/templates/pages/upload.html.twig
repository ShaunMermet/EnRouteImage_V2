{% block body_matter %}



<body>

<div class="row">
        <div class="col-md-12">
            <div class="box box-primary">

{% if checkAccess('uri_export') %}
<div class="col-lg-6">
    <div class="box-header">
        <h3 class="box-title"><i class="fa fa-cloud-download"></i> {{translate("UPLOAD.TITLE.EXPORT")}}</h3>
    </div>
    <div class="panel-body">
    <div class="labelimg-container">
    	<div class="column column-two" style="max-width: 100px;">
            <b>Group</b>
            <select class="js-basic-single export group" id="grpAssignEx" onchange="export_onComboChanged()"></select>
            <div  id="comboColumnGrp"></div>
            <div>
                <button id="addButton" class="small-btn" type="button" onclick="export_onGrpAddClicked()">+</button>
                <button id="removeButton" class="small-btn" type="button" onclick="export_onGrpRemoveClicked()">-</button>
            </div>
        </div>
        <div class="column column-two" style="max-width: 100px;">
            <b>Category</b>
            <select class="js-basic-single export cat" onchange="export_onComboChanged()"></select>
            <div  id="comboColumn"></div>
            <div>
                <button id="addButton" class="small-btn" type="button" onclick="export_onAddClicked()">+</button>
                <button id="removeButton" class="small-btn" type="button" onclick="export_onRemoveClicked()">-</button>
            </div>
        </div>
    	<div class="column column-three">
    		<button id="exportButton"class="button" type="button" onclick="export_onExportClicked()">Export</button>
    		<button id="dlButton"class="button-validate" type="button" onclick="export_onDlClicked()"  style="opacity: 0.5;pointer-events: none;" disabled>Download</button>
            <div id="imgCounter"></div>
    		<div id="prepare"></div>
    		<div id="dlLink"></div>
    	</div>
    	
    </div>
    </div>
</div>
{% endif %} 
{% if checkAccess('uri_catEdit') %}
<div class="col-lg-6">
    <div class="box-header">
        <h3 class="box-title"><i class="fa fa-edit"></i> {{translate("UPLOAD.TITLE.CATEGORY")}}</h3>
    </div>
    <div class="panel-body">
    <div class="labelimg-container">
        <div class="column column-two">
            <select class="js-basic-single" id="comboEdit" style="max-width:90%;" style="width: 150px;" onchange="onComboEditChanged()"></select>
            <br/>
            <div id="comboFeedback"></div>
        </div>
        <div class="column column-two">
            <button id="editButton"class="btn-mode2" type="button" onclick="catEdit_onEditClicked()">Edit</button>
        </div>
        <div class="column column-three">
            <button id="addButton"class="btn-mode2" type="button" onclick="catEdit_onAddClicked()">Add</button>
        </div>
        
    </div>
    <div class="labelimg-container" id="editCatPanel" style="DISPLAY:none;">
        <div class="column column-two">
            <!-- Textfield -->
            <input type="text" name="Category name" id="catEditText">
        </div>
        <div class="column column-two">
            <!-- ColorPicker -->
            <input class="jscolor" id="colorPicker">
        </div>
        <div class="column column-three">
            <button id="saveCatButton"class="btn-mode2" type="button" onclick="catEdit_onSaveCatClicked()">Save</button>
            <button id="deleteCatButton"class="btn-mode2" type="button" onclick="catEdit_onDeleteClicked()">Delete</button>
            <button id="closeCatEditButton"class="btn-mode2" type="button" onclick="catEdit_onCloseCatEditClicked()">Close</button>
        </div>
    </div>
    </div>
</div>
{% endif %} 
{% if checkAccess('uri_upload') %}
<div class="col-lg-12">
    <div class="box-header">
        <h3 class="box-title"><i class="fa fa-cloud-upload"></i> {{translate("UPLOAD.TITLE.UPLOAD")}}</h3>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <ul>
                <li>The maximum file size for uploads is <strong>10 MB</strong>.</li>
                <li>Only image files (<strong>JPG, PNG</strong>) are allowed.</li>
            </ul>
        </div>
    </div>
</div>
<div class="panel-body">
<!-- The file upload form used as target for the file upload widget -->
<form id="fileupload" action="upload/upload" method="POST" enctype="multipart/form-data">
    {% include "components/csrf.html.twig" %}
	<!-- Redirect browsers with JavaScript disabled to the origin page -->
	<noscript><input type="hidden" name="redirect" value="https://blueimp.github.io/jQuery-File-Upload/"></noscript>
    <!-- The fileupload-buttonbar contains buttons to add/delete files and start/cancel the upload -->
	<div class="row fileupload-buttonbar">
		<div class="col-lg-7" style="display: flex;justify-content: space-around;flex-wrap: wrap;width:100%;float:none">
			<!-- The fileinput-button span is used to style the file input field as button -->
			<span class="btn btn-success fileinput-button">
				<i class="glyphicon glyphicon-plus"></i>
				<span>Add files...</span>
				<input id="fileInputAdd" type="file" name="files[]" accept="image/*" multiple >
			</span>
            <span class="btn btn-success fileinput-button">
                <span>Add data...</span>
                <input id="fileOtherImport" type="file" onchange="import_onOtherChanged()" name="files2[]"  accept=".txt" multiple>
            </span>
			<button type="submit" class="btn btn-primary start">
				<i class="glyphicon glyphicon-upload"></i>
				<span>Start upload</span>
			</button>
            <span style="width:200px">
                <select class="js-basic-single" id="grpAssignAll" style="max-width:90%;" style="width: 150px;" onchange="onGrpAssignAllChanged()"></select>
            </span>
            <span style="width:200px">
                <select class="js-basic-single" id="catAssignAll" style="max-width:90%;" style="width: 150px;" onchange="onCatAssignAllChanged()"></select>
            </span>
			<!-- The global file processing state -->
			<span class="fileupload-process"></span>
		</div>
		<!-- The global progress state -->
		<div class="col-lg-5 fileupload-progress fade">
			<!-- The global progress bar -->
			<div class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100">
				<div class="progress-bar progress-bar-success" style="width:0%;"></div>
			</div>
			<!-- The extended global progress state -->
			<div class="progress-extended">&nbsp;</div>
		</div>
	</div>
	<!-- The table listing the files available for upload/download -->
    <table id="uploadTable" role="presentation" class="table table-striped"><tbody class="files"></tbody></table>
    {% if checkAccess('uri_upload') %}
    <div class="col-lg-12">
        <div class="box-header">
            <h3 class="box-title"><i class="fa fa-folder-open-o"></i> {{translate("UPLOAD.TITLE.FOLDER")}}</h3>
        </div>
        <br>
        <div class="row fileupload-buttonbar">
            <div class="col-lg-7" style="display: flex;justify-content: space-around;flex-wrap: wrap;width:100%;float:none">
                <span style="width:200px">
                    <select class="js-basic-single" id="grpAssignFolder" style="max-width:90%;" style="width: 150px;" onchange="onDownloadImageGrpChanged()"></select>
                </span>
                <span style="width:200px">
                    <select class="js-basic-single" id="catAssignFolder" style="max-width:90%;" style="width: 150px;" onchange="onDownloadImageCatChanged()"></select>
                </span>
            </div>
        </div>
        <br>
    </div>
    {% endif %} 
	<table id="downloadTable" role="presentation" class="table table-striped"><tbody class="filesA"></tbody></table>
</form>


<!-- The blueimp Gallery widget -->
<div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls" data-filter=":even">
    <div class="slides"></div>
    <h3 class="title"></h3>
    <a class="prev">‹</a>
    <a class="next">›</a>
    <a class="close">×</a>
    <a class="play-pause"></a>
    <ol class="indicator"></ol>
</div>


<!-- The template to display files available for upload -->
<script id="template-upload" type="text/x-tmpl">
{% verbatim %}{% for (var i=0, file; file=o.files[i]; i++) { %} 

    <tr class="template-upload fade">
        <input type="hidden" name="category[]">
        <input type="hidden" name="data[]">
        <input type="hidden" name="name[]" value="{%=file.name%}">
        <input type="hidden" name="group[]">
        <td>
            <span class="preview"></span>
        </td>
        <td>
            <p class="name">  {%=file.name%} </p>
            <strong class="error text-danger"></strong>
        </td>
        <td>
            <p class="data"></p>
        </td>
        <td>
            <select class="js-basic-single grp" id="grpAssignUp" style="max-width:90%;" style="width: 150px;"></select>
        </td>
        <td>
            <select class="js-basic-single cat" id="catAssignUp" style="max-width:90%;" style="width: 150px;"></select>
        </td>
        <td>
            <p class="size">Processing...</p>
            <div class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0"><div class="progress-bar progress-bar-success" style="width:0%;"></div></div>
        </td>
        <td>
            {% if (!i && !o.options.autoUpload) { %}
                <button class="btn btn-primary start" disabled>
                    <i class="glyphicon glyphicon-upload"></i>
                    <span>Start</span>
                </button>

            {% } %}
        </td>
        
    </tr>
{% } %}{% endverbatim %}

</script>
<!-- The template to display files available for download -->
<script id="template-download" type="text/x-tmpl">
{% if checkAccess('delete_img') %}
{% verbatim %}{% for (var i=0, file; file=o.files[i]; i++) { %}
    <tr class="template-download fade">
        <td>
            <span class="preview">
                {% if (file.thumbnailUrl) { %}
                    <a href="{%=file.url%}" title="{%=file.name%}" download="{%=file.name%}" data-gallery><img src="{%=file.thumbnailUrl%}"></a>
                {% } %}
            </span>
        </td>
        <td>
            <p class="name">
                {% if (file.url) { %}
                    <a href="{%=file.url%}" title="{%=file.name%}" download="{%=file.name%}" {%=file.thumbnailUrl?'data-gallery':''%}> {%=file.name%} </a>
                {% } else { %}
                    <span> {%=file.name%}</span>
                {% } %}
            </p>
            {% if (file.error) { %}
                <div><span class="label label-danger">Error</span> {%=file.error%}</div>
            {% } %}
        </td>
        <td>
        </td>
        <td>
            <span> {%=file.group%}</span>
        </td>
        <td>
            <span> {%=file.category%}</span>
        </td>
        <td>
            <span class="size"> {%=o.formatFileSize(file.size)%}</span>
        </td>
		<td>
            {% if (file.deleteUrl) { %}
                <button class="btn btn-danger delete" data-type="{%=file.deleteType%}" data-url="{%=file.deleteUrl%}" {% if (file.deleteWithCredentials) { %} data-xhr-fields='{"withCredentials":true}'{% } %}>
                    <i class="glyphicon glyphicon-trash"></i>
                    <span>Delete</span>
                </button>
            {% } else { %}
                <button class="btn btn-warning cancel">
                    <i class="glyphicon glyphicon-ban-circle"></i>
                    <span>Cancel</span>
                </button>
            {% } %}
        </td>
    </tr>
{% } %}
{% endverbatim %}
{% else %}
{% verbatim %}{% for (var i=0, file; file=o.files[i]; i++) { %}
    <tr class="template-download fade">
        <td>
            <span class="preview">
                {% if (file.thumbnailUrl) { %}
                    <a href="{%=file.url%}" title="{%=file.name%}" download="{%=file.name%}" data-gallery><img src="{%=file.thumbnailUrl%}"></a>
                {% } %}
            </span>
        </td>
        <td>
            <p class="name">
                {% if (file.url) { %}
                    <a href="{%=file.url%}" title="{%=file.name%}" download="{%=file.name%}" {%=file.thumbnailUrl?'data-gallery':''%}> {%=file.name%} </a>
                {% } else { %}
                    <span> {%=file.name%}</span>
                {% } %}
            </p>
            {% if (file.error) { %}
                <div><span class="label label-danger">Error</span> {%=file.error%}</div>
            {% } %}
        </td>
        <td>
            <span> {%=file.category%}</span>
        </td>
        <td>
            <span class="size"> {%=o.formatFileSize(file.size)%}</span>
        </td>
        <td>
            {% if (file.deleteUrl) { %}
                
            {% } else { %}
                <button class="btn btn-warning cancel">
                    <i class="glyphicon glyphicon-ban-circle"></i>
                    <span>Cancel</span>
                </button>
            {% } %}
        </td>
    </tr>
{% } %}
{% endverbatim %}
{% endif %}
</script>
</div>
{% endif %} 
</div>
 </div>
    </div>
</body>

